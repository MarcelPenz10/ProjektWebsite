@model Projekt.Models.ParkViewModel
@{
    ViewBag.Title = "ShowOnePark";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowOnePark</h2>

<p>@Model.Park.Name</p>
@{string path1 = "/Content/Media2/Images/BetterparkHintertux/BetterparkHintertux.jpg"; }
<img src="@path1" />

<div class="container">
    <h2>Carousel Example</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            @for (int i = 0; i < Model.DirectoryInfo.GetFiles().Length; i++)
            {
                var path = @Model.FileInfo[i].FullName;
                <div class="item active">
                    <img src="@path1" alt="Los Angeles" style="width:100%;">

                </div>
            }
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

@for (int i = 0; i < Model.Park.Comments.Count; i++)
{
    <p>@Model.Park.Comments[i].Comment</p>
}



